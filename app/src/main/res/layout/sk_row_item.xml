<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_tieu_de_sk"
        android:text="Tiêu đề"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_time_start_sk1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_time_start_sk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19/01/2024" />

        <TextView
            android:id="@+id/txt_time_end_sk1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Ngày kết thúc:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_time_end_sk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19/02/2024"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_noi_dung_sk"
        android:text="100 tàu vũ trụ A13 cho những ai may mắn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>