<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
         <variable
             name="ItemExercisesViewModel"
             type="com.example.hucegym.model.Exercises" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTieuDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:text="@{ItemExercisesViewModel.tieu_de_bt}" />

                <TextView
                    android:id="@+id/txtGhiChu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:text="@{ItemExercisesViewModel.ghi_chu_bt}" />

                <TextView
                    android:id="@+id/txtTypesRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:text="@{ItemExercisesViewModel.types_room}" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                tools:src="@tools:sample/avatars" />

        </LinearLayout>
</layout>